{
  "info": {
    "name": "BookBazaar API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "bookbazaar-collection"
  },
  "item": [
    {
      "name": "Auth & API Key",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "let json = pm.response.json();",
                  "pm.environment.set(\"token\", json.token);",
                  "pm.environment.set(\"user_id\", json.user.id);"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Generate API Key",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/auth/api-key",
              "host": ["{{base_url}}"],
              "path": ["auth", "api-key"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.environment.set(\"api_key\", pm.response.json().apiKey);"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Get My Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/auth/me",
              "host": ["{{base_url}}"],
              "path": ["auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Books",
      "item": [
        {
          "name": "Add Book (Admin Only)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" },
              { "key": "x-api-key", "value": "{{api_key}}", "type": "text" },
              { "key": "Content-Type", "value": "application/json", "type": "text" }
            ],
            "url": {
              "raw": "{{base_url}}/books",
              "host": ["{{base_url}}"],
              "path": ["books"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Atomic Habits\",\n  \"author\": \"James Clear\",\n  \"genre\": \"Self-help\",\n  \"price\": 15.99,\n  \"stock\": 50\n}"
            }
          }
        },
        {
          "name": "Get All Books",
          "request": {
            "method": "GET",
            "header": [
              { "key": "x-api-key", "value": "{{api_key}}", "type": "text" }
            ],
            "url": {
              "raw": "{{base_url}}/books",
              "host": ["{{base_url}}"],
              "path": ["books"]
            }
          }
        },
        {
          "name": "Get Book by ID",
          "request": {
            "method": "GET",
            "header": [
              { "key": "x-api-key", "value": "{{api_key}}", "type": "text" }
            ],
            "url": {
              "raw": "{{base_url}}/books/{{book_id}}",
              "host": ["{{base_url}}"],
              "path": ["books", "{{book_id}}"]
            }
          }
        },
        {
          "name": "Update Book",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" },
              { "key": "x-api-key", "value": "{{api_key}}", "type": "text" }
            ],
            "url": {
              "raw": "{{base_url}}/books/{{book_id}}",
              "host": ["{{base_url}}"],
              "path": ["books", "{{book_id}}"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"price\": 18.99\n}"
            }
          }
        },
        {
          "name": "Delete Book",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" },
              { "key": "x-api-key", "value": "{{api_key}}", "type": "text" }
            ],
            "url": {
              "raw": "{{base_url}}/books/{{book_id}}",
              "host": ["{{base_url}}"],
              "path": ["books", "{{book_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Reviews",
      "item": [
        {
          "name": "Add Review to Book",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" }
            ],
            "url": {
              "raw": "{{base_url}}/books/{{book_id}}/reviews",
              "host": ["{{base_url}}"],
              "path": ["books", "{{book_id}}", "reviews"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"rating\": 5,\n  \"comment\": \"Life-changing book!\"\n}"
            }
          }
        },
        {
          "name": "Get Reviews for Book",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/books/{{book_id}}/reviews",
              "host": ["{{base_url}}"],
              "path": ["books", "{{book_id}}", "reviews"]
            }
          }
        },
        {
          "name": "Delete Review",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" }
            ],
            "url": {
              "raw": "{{base_url}}/reviews/{{review_id}}",
              "host": ["{{base_url}}"],
              "path": ["reviews", "{{review_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Place Order",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" },
              { "key": "x-api-key", "value": "{{api_key}}", "type": "text" }
            ],
            "url": {
              "raw": "{{base_url}}/orders",
              "host": ["{{base_url}}"],
              "path": ["orders"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"items\": [\n    { \"bookId\": \"{{book_id}}\", \"quantity\": 1 }\n  ]\n}"
            }
          }
        },
        {
          "name": "Get My Orders",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" },
              { "key": "x-api-key", "value": "{{api_key}}", "type": "text" }
            ],
            "url": {
              "raw": "{{base_url}}/orders",
              "host": ["{{base_url}}"],
              "path": ["orders"]
            }
          }
        },
        {
          "name": "Get Order by ID",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" },
              { "key": "x-api-key", "value": "{{api_key}}", "type": "text" }
            ],
            "url": {
              "raw": "{{base_url}}/orders/{{order_id}}",
              "host": ["{{base_url}}"],
              "path": ["orders", "{{order_id}}"]
            }
          }
        }
      ]
    }
  ]
}
